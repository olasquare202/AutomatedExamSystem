@model AutomatedExamSystem.Models.Question 

<h2>Create Question</h2>
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Level</label>
        <select asp-for="Level" class="form-select">
            <option value="">-- Select Level --</option>
            <option value="100L">100L</option>
            <option value="200L">200L</option>
        </select>
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Section</label>
        <select asp-for="Section" class="form-select">
            @foreach (var s in Enum.GetValues(typeof(AutomatedExamSystem.Models.SectionType)))
            {
                <option value="@s">@s</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Text</label>
        <textarea asp-for="QuestionText" class="form-control"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3"><label>Option A</label><input asp-for="OptionA" class="form-control" /></div>
        <div class="col-md-6 mb-3"><label>Option B</label><input asp-for="OptionB" class="form-control" /></div>
        <div class="col-md-6 mb-3"><label>Option C</label><input asp-for="OptionC" class="form-control" /></div>
        <div class="col-md-6 mb-3"><label>Option D</label><input asp-for="OptionD" class="form-control" /></div>
    </div>

    <div class="mb-3">
        <label>Correct Option</label>
        <select asp-for="CorrectOption" class="form-select">
            <option value="">-- Select Correct Option --</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
        </select>
        <span asp-validation-for="CorrectOption" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Save</button>
</form>













