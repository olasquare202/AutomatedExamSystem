 @model IEnumerable<AutomatedExamSystem.Models.Question>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Questions</h2>
    <a class="btn btn-outline-primary" asp-action="DownloadCandidateScores">
        <i class="bi bi-download"></i> Download Candidate Scores (PDF)
    </a>
</div>

<p><a class="btn btn-success" asp-action="Create">Add question</a></p>
<table class="table table-striped">
    <thead><tr><th>#</th><th>Section</th><th>Text</th><th></th></tr></thead>
    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.Id</td>
                <td>@q.Section</td>
                <td>@q.QuestionText</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@q.Id">Edit</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@q.Id" />
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
  






