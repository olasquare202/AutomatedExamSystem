@{
    ViewData["Title"] = "Exam Not Available | Automated Exam System";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #eef3ff, #d6e4ff);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden;
    }

    .notification-card {
        background: white;
        border-radius: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        padding: 40px;
        text-align: center;
        max-width: 600px;
        animation: slideUp 0.8s ease;
    }

    @@keyframes slideUp {
        from

    {
        transform: translateY(40px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .notification-card h1 {
        font-size: 2rem;
        color: #003366;
        font-weight: 700;
    }

    .notification-card p {
        color: #555;
        font-size: 1.05rem;
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #004aad;
        border: none;
        border-radius: 50px;
        padding: 10px 25px;
        font-weight: 600;
        margin-top: 20px;
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #002b7f;
        }

    .bg-animation {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 25% 25%, #a1c4fd, transparent 70%), radial-gradient(circle at 75% 75%, #c2e9fb, transparent 70%);
        background-size: 300% 300%;
        animation: gradientMove 12s infinite alternate ease-in-out;
        z-index: -1;
    }

    @@keyframes gradientMove {
        0%

    {
        background-position: 0% 50%;
    }

    100% {
        background-position: 100% 50%;
    }

    }
</style>

<div class="bg-animation"></div>

<div class="notification-card">
    <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_y2hxPc.json"
                   background="transparent"
                   speed="1"
                   style="width: 200px; height: 200px;"
                   loop
                   autoplay>
    </lottie-player>

    <h1>Exam Not Available</h1>
    <p>⏳ The examination window is currently closed. Please check back later or contact your administrator for more information.</p>

    <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
        Go Back to Login
    </a>
</div>