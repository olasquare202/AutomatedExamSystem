@model AutomatedExamSystem.Models.Candidate
@{
    ViewData["Title"] = "Registration Successful";
}

<div class="container mt-5">
    <div class="card shadow-lg border-success mx-auto" style="max-width: 700px;">
        <div class="card-body text-center">
            <h2 class="text-success mb-4">
                <i class="bi bi-check-circle-fill"></i> Registration Successful!
            </h2>
            <p class="lead mb-4">
                Thank you, <strong>@Model.FullName</strong>, for registering for Perfetti Van Melle Assessment.
            </p>

            <div class="alert alert-success text-start mx-auto" style="max-width: 500px;">
                <h5 class="fw-bold">Your Candidate Details</h5>
                <p><strong>Candidate ID:</strong> @Model.CandidateCode</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Institution:</strong> @Model.Institution</p>
                <p><strong>Course:</strong> @Model.CourseOfStudy</p>
                <p><strong>Level:</strong> @Model.Level</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            </div>

            <p class="mt-3">A confirmation email has been sent to <strong>@Model.Email</strong> with your exam details.</p>

            <a href="@Url.Action("Login", "Account")" class="btn btn-primary mt-3">
                <i class="bi bi-box-arrow-in-right"></i> Proceed to Login
            </a>
        </div>
    </div>
</div>
