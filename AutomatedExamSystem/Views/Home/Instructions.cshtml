@{
    ViewData["Title"] = "Exam Instructions | Perfetti Van Melle Scholarship Assessment";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #e3f2fd, #ffffff);
        color: #002b5c;
        margin: 0;
        overflow-x: hidden;
        transition: all 0.6s ease-in-out;
    }

    .card-instructions {
        max-width: 850px;
        margin: 4rem auto;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 25px;
        box-shadow: 0 10px 30px rgba(0, 74, 173, 0.25);
        padding: 3rem;
        text-align: left;
        animation: fadeInUp 1s ease forwards;
    }

    h2 {
        color: #004aad;
        font-weight: 700;
        text-align: center;
        margin-bottom: 0.5rem;
    }

    h5 {
        text-align: center;
        font-weight: 500;
        color: #666;
        margin-bottom: 1.5rem;
    }

    ul {
        list-style-type: disc;
        margin-left: 1.5rem;
        line-height: 1.8;
        font-size: 1.05rem;
    }

    .highlight {
        color: #e63946;
        font-weight: 600;
    }

    .btn-proceed {
        display: block;
        width: 100%;
        background-color: #e63946;
        border: none;
        border-radius: 50px;
        color: #fff;
        padding: 14px;
        font-weight: 600;
        font-size: 1.1rem;
        margin-top: 2rem;
        box-shadow: 0 5px 15px rgba(230, 57, 70, 0.3);
        transition: 0.3s;
    }

        .btn-proceed:hover {
            background-color: #c91c28;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(230, 57, 70, 0.4);
        }

        .btn-proceed:disabled {
            background-color: #adb5bd;
            box-shadow: none;
            transform: none;
            cursor: not-allowed;
        }

    .note {
        font-style: italic;
        text-align: center;
        margin-top: 1rem;
        color: #6c757d;
    }

    .confirm-section {
        text-align: center;
        margin-top: 2rem;
    }

        .confirm-section label {
            font-weight: 500;
            color: #004aad;
            cursor: pointer;
            user-select: none;
        }

    .footer-logo {
        text-align: center;
        margin-top: 2.5rem;
    }

        .footer-logo img {
            width: 150px;
            opacity: 0.9;
            transition: opacity 0.3s;
        }

            .footer-logo img:hover {
                opacity: 1;
            }

        .footer-logo p {
            font-style: italic;
            color: #004aad;
            font-size: 0.9rem;
            margin-top: 4px;
        }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="card-instructions">
    <div class="text-center mb-3">
        <img src="~/images/examlogo.jpeg" alt="Instruction Logo" />
    
    </div>

    <h2>Perfetti Van Melle Undergraduate Scholarship Assessment</h2>
    <h5>Powered by Fort Knox Outsourcing</h5>

    <p class="lead text-center">Please read all instructions carefully before starting your assessment:</p>

    <ul>
        <li>The test duration is <strong>60 minutes</strong>. Once started, the timer cannot be paused or restarted.</li>
        <li>When the time elapses, you will be automatically logged out, and your answers will be submitted.</li>
        <li>Log in using the <strong>email and password code</strong> sent to your registered email address during registration.</li>
        <li>Ensure your internet connection is stable and your device is fully charged before starting.</li>
        <li>Read each question carefully before selecting your answer.</li>
        <li>Avoid refreshing, minimizing, or switching tabs during the test, as this may cause automatic logout.</li>
        <li>Click <strong>Submit</strong> once you have reviewed all your responses.</li>
    </ul>

    <p class="text-center mt-4 fw-semibold" style="color:#004aad;">
        Good luck — <span class="highlight">prepare, perform, and progress</span> with Perfetti Van Melle!
    </p>

    <div class="confirm-section">
        <input type="checkbox" id="confirmRead" class="form-check-input me-2" style="transform: scale(1.3);" />
        <label for="confirmRead">I have read and understood the instructions</label>
    </div>

    <div class="text-center">
        <a href="@Url.Action("Login", "Account")" id="proceedBtn" class="btn btn-proceed" disabled>Proceed to Exam Login</a>
        <p class="note">You will be redirected to the login page to start your test.</p>
    </div>

    <div class="footer-logo">
        <a href="https://www.fortknoxgroup.com/" target="_blank">
            <img src="~/images/fortknox_logo.jpg" alt="Fort Knox Outsourcing Logo" />
        </a>
        <p>Technology and Talent Partner</p>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const checkbox = document.getElementById("confirmRead");
        const proceedBtn = document.getElementById("proceedBtn");

        checkbox.addEventListener("change", function () {
            proceedBtn.disabled = !this.checked;
        });
    });
</script>

